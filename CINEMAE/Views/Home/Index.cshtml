@{
    ViewData["Title"] = "Home";
}

<html>
<head>
    <title>Cinemae</title>
    <link rel="stylesheet" type="text/css" href="styles.css">
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="#movies">Movies</a></li>
                <li><a href="#food">Food</a></li>
            </ul>
        </nav>
    </header>

    <section id="hero">
        <h1>Bienvenido a Cinemae</h1>
        <p>Disfruta de los nuevos estrenos y come de lo lindo en nuestro cine.</p>
        <a href="#movies" class="btn">Explorar peliculas</a>
    </section>

    <section id="movies">
        <h2>En cartelera</h2>
        <div class="movie">
            <img src="https://archivos-cms.cinecolombia.com/images/_aliases/poster_card/5/6/0/0/40065-4-esl-CO/44c1afd60fb0-smb_cineco_2-poster_480x670.jpg" alt="Movie 1">
            <h3>Super Mario Bross: La Pelicula</h3>
            <p>Genero: Aventura</p>
            <p>Duracion: 2 horas 30 minutos</p>
        </div>
        <div class="movie">
            <img src="https://archivos-cms.cinecolombia.com/images/_aliases/poster_card/1/0/2/0/40201-3-esl-CO/0f65d15c7c34-480x670.jpg" alt="Movie 2">
            <h3>Spider-Man: A Través Del SpiderVerso</h3>
            <p>Genero: Acción</p>
            <p>Duracion: 1 hora 45 minutos</p>
        </div>
        <div class="movie">
            <img src="https://archivos-cms.cinecolombia.com/images/_aliases/poster_card/3/8/5/1/41583-1-esl-CO/3d87a159f887-bdrs_pstr-dskp_480x670.png" alt="Movie 2">
            <h3>No Descansarás</h3>
            <p>Genero: Terror</p>
            <p>Duracion: 1 hora 30 minutos</p>
        </div>
        <div class="movie">
            <img src="https://archivos-cms.cinecolombia.com/images/_aliases/poster_card/1/7/5/2/42571-1-esl-CO/fd53a0a490e2-poster_480x670.png" alt="Movie 2">
            <h3>Boogieman: Tu miedo Es Real</h3>
            <p>Genero: Terror</p>
            <p>Duracion: 2 horas 10 minutos</p>
        </div>
        <div class="movie">
            <img src="https://archivos-cms.cinecolombia.com/images/_aliases/poster_card/1/9/9/1/41991-1-esl-CO/d3a35fb41cfe-2_poster_480x670.png" alt="Movie 2">
            <h3>Mi Papá Es Un Peligro</h3>
            <p>Genero: Comedia</p>
            <p>Duracion: 2 horas 20 minutos</p>
        </div>
        <div class="movie">
            <img src="https://archivos-cms.cinecolombia.com/images/_aliases/poster_card/0/3/3/1/41330-1-esl-CO/3aeedd595894-warner_edr_cinecol_480x670.jpg" alt="Movie 2">
            <h3>Evil Dead: El Despertar</h3>
            <p>Genero: Terror</p>
            <p>Durction: 1 hora 30 minutos</p>
        </div>
        <!-- Add more movie divs as needed -->
    </section>

    <section id="food">
        <h2>Deliciosos Snacks</h2>
        <p>Disfruta de gran variedad de snacks y bebidas durante la película.</p>
        <a href="@Url.Action("Food","Home")" class="btn">Ver menú de comida</a>
    </section>

    <section id="food-menu">
        <h3>Food Menu</h3>
        <ul>
            <li>Popcorn</li>
            <li>Soda</li>
            <li>Candy</li>
            <li>Hot Dogs</li>
            <!-- Add more food items as needed -->
        </ul>
        <a href="#order" class="btn">Place Order</a>
    </section>

    <section id="order">
        <h3>Place Your Order</h3>
        <p>To order food, please visit our concessions stand at the cinema.</p>
        <p>Enjoy your movie and snacks!</p>
    </section>

    <footer>
        <p>&copy; 2023 Awesome Cinema. All rights reserved.</p>
    </footer>

</body>
</html>